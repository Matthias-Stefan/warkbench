<Application x:Class="warkbench.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:warkbench"
             RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <DockFluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml" />

        <StyleInclude Source="avares://warkbench/Styles/ExpanderStyles.axaml" />
        <StyleInclude Source="avares://warkbench/Styles/TextBoxStyles.axaml" />
        <StyleInclude Source="avares://warkbench/Styles/ComboBoxStyles.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://warkbench/Assets/Icons/IconResources.axaml" />
                <ResourceInclude Source="avares://Nodify/Theme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

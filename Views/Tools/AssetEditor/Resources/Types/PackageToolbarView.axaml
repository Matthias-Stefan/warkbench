<UserControl x:Class="warkbench.Views.PackageToolbarView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="using:warkbench.Converter"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataTemplates="using:warkbench.DataTemplates"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:warkbench.Views"
             xmlns:vm="using:warkbench.ViewModels"
             x:Name="Root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="False"
             x:DataType="vm:PackageViewModel"
             mc:Ignorable="d">

    <Border>
        <StackPanel VerticalAlignment="Top"  
                    Orientation="Horizontal"
                    Margin="0 0 0 0">
            <Button Command="{Binding DataContext.AddPackageItemCommand, RelativeSource={RelativeSource AncestorType=views:AssetEditorView}}"
                    CommandParameter="{Binding}">
                <StackPanel Orientation="Horizontal">
                    <PathIcon Width="16"
                              Height="16" 
                              Data="{StaticResource icon_add_package_item}"
                              Foreground="LightGreen"/>
                    <TextBlock Text="Add package item"
                               Margin="8 0 0 0"></TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</UserControl>

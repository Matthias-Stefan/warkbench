<UserControl x:Class="warkbench.Views.DetailsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="using:warkbench.Converter"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataTemplates="using:warkbench.DataTemplates"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Mvvm.ComponentModel;assembly=CommunityToolkit.Mvvm"
             xmlns:views="using:warkbench.Views"
             xmlns:vm="using:warkbench.ViewModels"
             x:Name="Root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:DetailsViewModel"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Converter  -->
        <converter:ResourceIconConverter x:Key="ResourceIconConverter" />
    </UserControl.Resources>
    
    
    <UserControl.DataTemplates>
        <!--  ASSET EDITOR  -->
        <!--  Package  -->
        <DataTemplate DataType="vm:PackageViewModel">
            <Grid>
                <views:PackageView />
            </Grid>
        </DataTemplate>
        
        <!--  Blueprint  -->
        <DataTemplate DataType="vm:BlueprintViewModel">
            <Grid>
                <views:BlueprintView />
            </Grid>
        </DataTemplate>
        
        <!--  Property  -->
        <DataTemplate DataType="vm:PropertyViewModel">
            <Grid>
                <views:PropertyView />
            </Grid>
        </DataTemplate>
        
        <!--  INameable  -->
        <DataTemplate DataType="vm:INameable">
            <!--  Header  -->
            <Grid ColumnDefinitions="Auto, Auto, *" Margin="12, 12, 12, 12" VerticalAlignment="Top">
                <PathIcon Grid.Column="0" 
                          Width="24" Height="24"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Data="{Binding DataType=Binding, Converter={StaticResource ResourceIconConverter}}" />
                <TextBlock Grid.Column="1" 
                           Text="{Binding Name}"
                           FontSize="24"
                           Margin="12 0 0 0"/>
            </Grid>
        </DataTemplate>
        
        <!--  NODE EDITOR  -->
        <!--  Bool Node  -->
        <DataTemplate DataType="vm:BoolNodeViewModel">
            <Grid>
                <views:BoolNodeView />
            </Grid>
        </DataTemplate>
        
        <!--  Class Node  -->
        <DataTemplate DataType="vm:ClassNodeViewModel">
            <Grid>
                <views:ClassNodeView />
            </Grid>
        </DataTemplate>
        
        <!--  Float Node  -->
        <DataTemplate DataType="vm:FloatNodeViewModel">
            <Grid>
                <views:FloatNodeView />
            </Grid>
        </DataTemplate>
        
        <!--  Int32 Node  -->
        <DataTemplate DataType="vm:Int32NodeViewModel">
            <Grid>
                <views:Int32NodeView />
            </Grid>
        </DataTemplate>
        
        <!--  Int64 Node  -->
        <DataTemplate DataType="vm:Int64NodeViewModel">
            <Grid>
                <views:Int64NodeView />
            </Grid>
        </DataTemplate>
        
        <!--  Rect Node  -->
        <DataTemplate DataType="vm:RectNodeViewModel">
            <Grid>
                <views:RectNodeView />
            </Grid>
        </DataTemplate>
        
        <!--  String Node  -->
        <DataTemplate DataType="vm:StringNodeViewModel">
            <Grid>
                <views:StringNodeView />
            </Grid>
        </DataTemplate>
        
        <!--  Texture Node  -->
        <DataTemplate DataType="vm:TextureNodeViewModel">
            <Grid>
                <views:TextureNodeView />
            </Grid>
        </DataTemplate>
        
        <!--  Vec2 Node  -->
        <DataTemplate DataType="vm:Vec2NodeViewModel">
            <Grid>
                <views:Vec2NodeView />
            </Grid>
        </DataTemplate>
        
        <!--  Property Node  -->
        <DataTemplate DataType="vm:PropertyNodeViewModel">
            <Grid>
                <views:PropertyNodeView />
            </Grid>
        </DataTemplate>
        
        <!--  DEFAULT  -->
        <DataTemplate DataType="toolkit:ObservableObject">
            <Grid>
                <TextBlock Margin="10"
                           Padding="8"
                           FontSize="16"
                           Foreground="White"
                           Text="No Content to Display" />
            </Grid>
        </DataTemplate>
    </UserControl.DataTemplates>

    <!--  ==============================  -->
    <ScrollViewer>
        <ContentControl Content="{Binding SelectedObject}" />
    </ScrollViewer>
</UserControl>

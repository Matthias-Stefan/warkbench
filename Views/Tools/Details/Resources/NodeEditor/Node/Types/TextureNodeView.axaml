<UserControl x:Class="warkbench.Views.TextureNodeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="using:warkbench.Converter"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataTemplates="using:warkbench.DataTemplates"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:warkbench.Views"
             xmlns:vm="using:warkbench.ViewModels"
             x:Name="Root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:TextureNodeViewModel"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converter:BoolInvertConverter x:Key="BoolInvertConverter" />
    </UserControl.Resources>
    
    <Grid RowDefinitions="Auto,*">
        <!--  Header  -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, Auto, *" Margin="12, 12, 12, 12" VerticalAlignment="Center">
            <PathIcon Grid.Column="0" 
                      Width="24" Height="24"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Data="{StaticResource icon_texture_node}" />
            <TextBlock Grid.Column="1" 
                       Text="Texture Node"
                       FontSize="24"
                       Margin="12 0 0 0"/>
        </Grid>
        
        <!--  Content  -->
        <Expander Grid.Row="1" 
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  Classes="grid"
                  ExpandDirection="Down"
                  Header="Common"
                  IsExpanded="True">
            <StackPanel Grid.IsSharedSizeScope="True" Spacing="2">
                
                <!--  Name  -->
                <Border Height="32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              MinWidth="100"
                                              SharedSizeGroup="Left" />
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Name" />
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="Transparent" />

                        <Border Grid.Column="2" Background="#191a1c">
                            <TextBox Margin="19,0,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Text="{Binding Name}" />
                        </Border>
                    </Grid>
                </Border>

                <!--  Value  -->
                <Border Height="32" IsVisible="{Binding NodeHeaderBrushType, Converter={StaticResource BoolInvertConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              MinWidth="100"
                                              SharedSizeGroup="Left" />
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Value" />
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="Transparent" />

                        <Border Grid.Column="2" Background="#191a1c">
                            <TextBox Margin="19,0,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Text="{Binding Value}" />
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </Expander>
    </Grid>
    
    
</UserControl>
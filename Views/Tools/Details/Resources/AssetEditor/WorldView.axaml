<UserControl x:Class="warkbench.Views.WorldView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="using:warkbench.Converter"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataTemplates="using:warkbench.DataTemplates"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:warkbench.Views"
             xmlns:vm="using:warkbench.ViewModels"
             x:Name="Root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:WorldViewModel"
             mc:Ignorable="d">
    <Grid RowDefinitions="Auto,*">
        <Expander Grid.Row="1" 
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  Classes="grid"
                  ExpandDirection="Down"
                  Header="Common"
                  IsExpanded="True">
            <StackPanel Grid.IsSharedSizeScope="True" Spacing="2">
                <!--  Guid  -->
                <Border Height="32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              MinWidth="100"
                                              SharedSizeGroup="Left" />
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Guid" />
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="Transparent" />

                        <Border Grid.Column="2" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="{Binding Guid}" />
                        </Border>
                    </Grid>
                </Border>
                
                <!--  Name  -->
                <Border Height="32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              MinWidth="100"
                                              SharedSizeGroup="Left" />
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Name" />
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="Transparent" />

                        <Border Grid.Column="2" Background="#191a1c">
                            <TextBox Margin="19,0,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Text="{Binding Name}" />
                        </Border>
                    </Grid>
                </Border>

                <!--  Virtual Path  -->
                <Border Height="32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              MinWidth="100"
                                              SharedSizeGroup="Left" />
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Virtual Path" />
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="Transparent" />

                        <Border Grid.Column="2" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="{Binding VirtualPath}" />
                        </Border>
                    </Grid>
                </Border>
                
                <!--  TileSize  -->
                <Border Height="32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              MinWidth="100"
                                              SharedSizeGroup="Left" />
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Tile Size" />
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="Transparent" />

                        <Border Grid.Column="2" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="{Binding TileSize}" />
                        </Border>
                    </Grid>
                </Border>
                
                <!--  ChunkSize  -->
                <Border Height="32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"
                                              MinWidth="100"
                                              SharedSizeGroup="Left" />
                            <ColumnDefinition Width="2" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Chunk Size" />
                        </Border>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="Transparent" />

                        <Border Grid.Column="2" Background="#191a1c">
                            <TextBlock Margin="19,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="{Binding ChunkSize}" />
                        </Border>
                    </Grid>
                </Border>
                
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>

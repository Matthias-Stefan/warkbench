<UserControl x:Class="warkbench.Views.WorldDocumentView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wbuv="clr-namespace:warkbench.src.ui.viewport.Controls;assembly=warkbench.ui.viewport"
             xmlns:vm="using:warkbench.ViewModels"
             x:Name="Root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:WorldDocumentViewModel"
             mc:Ignorable="d"
             Background="Transparent">
    <Grid RowDefinitions="Auto, *"> <!-- #191a1c -->
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
            <!--  Select  -->
            <ToggleButton IsChecked="{Binding IsSelectToolEnabled}">
                <ToolTip.Tip>
                    <StackPanel>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Select Tool" FontWeight="DemiBold"/>
                            <TextBlock Grid.Column="1" Text="[Q]" Opacity="0.8"/>
                        </Grid>

                        <TextBlock Text="Select and modify objects" Opacity="0.75"/>
                    </StackPanel>
                </ToolTip.Tip>
                <StackPanel Orientation="Horizontal">
                    <PathIcon Width="16"
                              Height="16" 
                              Data="{StaticResource icon_arrow_selector_tool}"/>
                </StackPanel>
            </ToggleButton>
            
            <!--  Move  -->
            <ToggleButton IsChecked="{Binding IsSelectToolEnabled}">
                <ToolTip.Tip>
                    <StackPanel>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Move" FontWeight="DemiBold"/>
                            <TextBlock Grid.Column="1" Text="[W]" Opacity="0.8"/>
                        </Grid>

                        <TextBlock Text="Move a object" Opacity="0.75"/>
                    </StackPanel>
                </ToolTip.Tip>
                <StackPanel Orientation="Horizontal">
                    <PathIcon Width="16"
                              Height="16" 
                              Data="{StaticResource icon_move}"/>
                </StackPanel>
            </ToggleButton>
            
            <!--  Scale  -->
            <ToggleButton IsChecked="{Binding IsSelectToolEnabled}">
                <ToolTip.Tip>
                    <StackPanel>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Scale" FontWeight="DemiBold"/>
                            <TextBlock Grid.Column="1" Text="[E]" Opacity="0.8"/>
                        </Grid>

                        <TextBlock Text="Scale a object" Opacity="0.75"/>
                    </StackPanel>
                </ToolTip.Tip>
                <StackPanel Orientation="Horizontal">
                    <PathIcon Width="16"
                              Height="16" 
                              Data="{StaticResource icon_scale}"/>
                </StackPanel>
            </ToggleButton>
            
            <!--  Rotate  -->
            <ToggleButton IsChecked="{Binding IsSelectToolEnabled}">
                <ToolTip.Tip>
                    <StackPanel>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Rotate" FontWeight="DemiBold"/>
                            <TextBlock Grid.Column="1" Text="[R]" Opacity="0.8"/>
                        </Grid>

                        <TextBlock Text="Rotate a object" Opacity="0.75"/>
                    </StackPanel>
                </ToolTip.Tip>
                <StackPanel Orientation="Horizontal">
                    <PathIcon Width="16"
                              Height="16" 
                              Data="{StaticResource icon_rotate}"/>
                </StackPanel>
            </ToggleButton>
            
        </StackPanel>
        
        <!--  World viewport  -->
        <wbuv:WorldViewport Grid.Row="1" 
                            ActiveTool="{Binding ActiveTool}"
                            Renderables="{Binding Renderables}"/>
    </Grid>
</UserControl>
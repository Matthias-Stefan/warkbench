<UserControl x:Class="warkbench.Views.WorldDocumentView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wvp="clr-namespace:warkbench.viewport"
             xmlns:vm="using:warkbench.ViewModels"
             x:Name="Root"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:WorldDocumentViewModel"
             mc:Ignorable="d">
    <Grid Background="#191a1c">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" VerticalAlignment="Center" Spacing="8">
            <!--  Select  -->
            <ToggleButton IsPressed="{Binding IsSelectToolEnabled}">
                <ToolTip.Tip>
                    <StackPanel>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Select Tool" FontWeight="DemiBold"/>
                            <TextBlock Grid.Column="1" Text="[Q]" Opacity="0.8"/>
                        </Grid>

                        <TextBlock Text="Select and modify objects" Opacity="0.75"/>
                    </StackPanel>
                </ToolTip.Tip>
                <StackPanel Orientation="Horizontal">
                    <PathIcon Width="16"
                              Height="16" 
                              Data="{StaticResource icon_arrow_selector_tool}"/>
                </StackPanel>
            </ToggleButton>
        </StackPanel>
        
        <wvp:WorldViewport Grid.Row="1" ActiveTool="{Binding ActiveTool}"/>
    </Grid>
    
    
</UserControl>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="warkbench.src.ui.core.Projects.CreateProjectWindow"
        Title="Create Project" 
        SizeToContent="WidthAndHeight"
        MinWidth="450"
        MinHeight="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    
    <StackPanel Spacing="12" Margin="16">
        <TextBlock Text="Project Name"/>
        <TextBox Text="{Binding ProjectName}"/>

        <TextBlock Text="Project Location"/>
        <TextBox Text="{Binding ProjectPath}"/>

        <CheckBox Content="Open project after creation"
                  IsChecked="{Binding OpenAfterCreation}"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"/>
            <Button Content="Create"
                    IsDefault="True"
                    Command="{Binding ConfirmCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
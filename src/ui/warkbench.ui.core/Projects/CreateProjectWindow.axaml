<Window x:Class="warkbench.src.ui.core.Projects.CreateProjectWindow" 
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:wbvm="clr-namespace:warkbench.src.editors.core.Projects;assembly=warkbench.editors.core"
        
        Title="Create Project" 
        SizeToContent="WidthAndHeight"
        Width="650"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        Background="#1d1d20"
        BorderBrush="{DynamicResource DockThemeBorderLowBrush}"
        BorderThickness="1"
        d:DesignHeight="450"
        d:DesignWidth="800"
        x:CompileBindings="True"
        x:DataType="wbvm:CreateProjectViewModel"
        mc:Ignorable="d">
    
    <StackPanel Spacing="12" Margin="16">
        <TextBlock Text="Project Name"/>
        <TextBox x:Name="TextBox_ProjectName" Text="{Binding ProjectName}"/>

        <!-- TODO: Configurable? -->
        <TextBlock Text="Project Location"/>
        <TextBlock Text="{Binding ProjectPath}" />

        <CheckBox Content="Open project after creation"
                  IsChecked="{Binding OpenAfterCreation}"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"/>
            <Button Content="Create"
                    IsDefault="True"
                    Command="{Binding ConfirmCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
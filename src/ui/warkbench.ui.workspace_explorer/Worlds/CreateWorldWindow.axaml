<Window x:Class="warkbench.src.ui.workspace_explorer.Worlds.CreateWorldWindow" 
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:wbvm="clr-namespace:warkbench.src.editors.core.Worlds;assembly=warkbench.editors.core"
        
        Title="Create Project" 
        SizeToContent="WidthAndHeight"
        Width="650"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        Background="#1d1d20"
        BorderBrush="{DynamicResource DockThemeBorderLowBrush}"
        BorderThickness="1"
        d:DesignHeight="450"
        d:DesignWidth="800"
        x:CompileBindings="True"
        x:DataType="wbvm:CreateWorldViewModel"
        mc:Ignorable="d">
    
    <StackPanel Spacing="12" Margin="16">
        <TextBlock Text="World Name"/>
        <TextBox x:Name="TextBox_WorldName" Text="{Binding WorldName}"/>

        <TextBlock Text="Tile Size"/>
        <TextBox Text="{Binding TileSize}"/>

        <TextBlock Text="Chunk Resolution"/>
        <TextBox Text="{Binding ChunkResolution}"/>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"/>
            <Button Content="Create"
                    IsDefault="True"
                    Command="{Binding ConfirmCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>